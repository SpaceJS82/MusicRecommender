// server/tsconfig.json
{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    
    /* KLJUČNE NASTAVITVE ZA ODSTRANITEV NAPAKE: */
    "esModuleInterop": true, 
    "allowSyntheticDefaultImports": true, 
    "moduleResolution": "node",

    /* Priporočene nastavitve za stabilnost */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
    
    // Odstranite: "lib", "jsx", "noEmit", "resolveJsonModule", "isolatedModules"
  },
  "include": [
    "src/**/*"
  ]
}